NODE_ENV=production
PORT=8080

# Security
# Required in production
JWT_SECRET=change_me_to_long_random_secret
JWT_EXPIRES_IN=7d

# Databases
# Required in production
MONGO_MAIN_URI=mongodb://127.0.0.1:27017/master_realestate_saas
MONGO_URI_TEMPLATE=mongodb://127.0.0.1:27017/<DB_NAME>
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
ENABLE_EMAIL_QUEUE=false

# Domains
# Required in production
BASE_DOMAIN=luxury-uaeproperty.com
API_DOMAIN=api.luxury-uaeproperty.com
SERVER_IP=YOUR_SERVER_PUBLIC_IP
DEFAULT_TRIAL_DAYS=14
# Auto-approve free/trial signups on registration (true/false)
AUTO_APPROVE_FREE_PLAN=true

# Notifications
ALERT_EMAIL=admin@luxury-uaeproperty.com

# Optional CORS allow-list (comma-separated origins)
# Example: ALLOWED_ORIGINS=https://www.luxury-uaeproperty.com,https://app.partner.com
ALLOWED_ORIGINS=

# Optional public object storage URL for tenant logo/media links
# Example: https://cdn.luxury-uaeproperty.com
MINIO_PUBLIC_URL=

# SMTP (Resend)
SMTP_HOST=smtp.resend.com
SMTP_PORT=2465
SMTP_SECURE=true
SMTP_USER=resend
SMTP_PASS=re_xxx
SMTP_FROM_EMAIL=support@luxury-uaeproperty.com
SMTP_CONNECTION_TIMEOUT_MS=10000
SMTP_GREETING_TIMEOUT_MS=10000
SMTP_SOCKET_TIMEOUT_MS=15000

# Email delivery mode
EMAIL_DELIVERY_MODE=smtp

# Optional HTTPS fallback (works over port 443)
# Provide an endpoint that accepts JSON: { from, to, subject, html }
EMAIL_HTTP_ENDPOINT=
EMAIL_HTTP_AUTH_TOKEN=
EMAIL_HTTP_AUTH_HEADER=Authorization
EMAIL_HTTP_TIMEOUT_MS=10000

# Example (Resend):
# EMAIL_DELIVERY_MODE=http
# EMAIL_HTTP_ENDPOINT=https://api.resend.com/emails
# EMAIL_HTTP_AUTH_TOKEN=re_xxx
# SMTP_FROM_EMAIL=support@luxury-uaeproperty.com

# Admin onboarding email setup link
# If not set, defaults to: https://<API_DOMAIN>/api/auth/setup-password-form
ADMIN_PASSWORD_SETUP_URL=
ADMIN_SETUP_TOKEN_EXPIRES_IN=24h
